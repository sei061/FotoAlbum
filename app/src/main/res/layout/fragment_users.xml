<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/user_id_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/user_id_txt"
        app:layout_constraintTop_toBottomOf="@+id/user_id_txt" />

    <TextView
        android:id="@+id/user_username_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/user_name_txt"
        app:layout_constraintTop_toBottomOf="@+id/user_name_txt" />

    <TextView
        android:id="@+id/user_email_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/user_username_txt"
        app:layout_constraintTop_toBottomOf="@+id/user_username_txt" />

    <TextView
        android:id="@+id/user_address_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/user_email_txt"
        app:layout_constraintTop_toBottomOf="@+id/user_email_txt" />

    <TextView
        android:id="@+id/user_phne_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/user_address_txt"
        app:layout_constraintTop_toBottomOf="@+id/user_address_txt" />

    <TextView
        android:id="@+id/user_website_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/user_phne_txt"
        app:layout_constraintTop_toBottomOf="@+id/user_phne_txt" />

    <TextView
        android:id="@+id/user_company_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/user_website_txt"
        app:layout_constraintTop_toBottomOf="@+id/user_website_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>